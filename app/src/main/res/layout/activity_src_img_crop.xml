<com.diandian.coolco.emilie.widget.DetectSwipeGestureRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:id="@+id/root"

    tools:context="com.diandian.coolco.emilie.activity.SrcImgCropActivity">

    <com.edmodo.cropper.CropImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/crop_image_view"
        android:src="@drawable/ic_launcher"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        />
<!--

    <TextView
        android:text="裁剪"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/tv_crop"
        android:layout_alignParentBottom="true"
        android:background="#88000000"
        android:textSize="16sp"
        android:textColor="#f9f9f9"
        android:gravity="center"
        android:layout_centerInParent="true" />
-->

    <RelativeLayout
        android:id="@+id/rl_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#aa000000" >

        <ImageView
            android:id="@+id/iv_crop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:src="@android:drawable/ic_menu_crop" />

        <TextView
            android:id="@+id/tv_skip_crop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="跳过"
            android:textSize="16sp"
            android:textColor="#e7e7e7"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="12dp"
            android:paddingRight="20dp"
            android:gravity="center"/>

    </RelativeLayout>

</com.diandian.coolco.emilie.widget.DetectSwipeGestureRelativeLayout>
