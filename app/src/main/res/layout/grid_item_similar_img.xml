<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.diandian.coolco.emilie.widget.PlaceHolderColorFilterImageView
        android:id="@+id/iv_similar_img_grid_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@null"
        android:adjustViewBounds="true"
        android:background="#000000"/>

    <view
        android:id="@+id/npc_similar_img_grid_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="com.diandian.coolco.emilie.widget.NumberProgressCircle"
        android:layout_centerInParent="true"
        >

        <ProgressBar
            style="@style/progressBarLightTheme"
            android:layout_width="48dp"
            android:layout_height="48dp"
            />

        <TextView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:textSize="12sp"
            android:textColor="@color/global_text_secondary_inverse"
            android:text="12%"
            android:gravity="center"/>

    </view>


</RelativeLayout>

