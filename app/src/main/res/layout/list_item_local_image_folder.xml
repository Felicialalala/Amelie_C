<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_bg_list_item"
    android:paddingLeft="12dp"
    android:paddingTop="8dp"
    android:paddingRight="12dp"
    android:paddingBottom="8dp"
    >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/dv_local_img_folder_first_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@null" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/dv_local_img_folder_first_img"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_local_img_folder_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所有图片"
            android:textSize="16sp"
            android:textColor="#3d3d3d" />

        <TextView
            android:id="@+id/tv_local_img_folder_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="423张"
            android:textColor="#3d3d3d"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

</RelativeLayout>