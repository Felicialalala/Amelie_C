<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_root"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.diandian.coolco.emilie.fragment.SearchFragment">

<!--
    <com.diandian.coolco.emilie.widget.PanningImageView
        android:id="@+id/piv_search_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="matrix"
        android:src="@drawable/panning"/>-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_go2camera"
                android:layout_width="@dimen/size_search_fragment_button"
                android:layout_height="@dimen/size_search_fragment_button"
                android:background="@drawable/selector_bg_camera_button"
                android:src="@android:drawable/ic_menu_camera"
                android:scaleType="centerInside"/>

            <TextView
                android:id="@+id/tv_go2camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="拍照搜索"
                android:textAppearance="@style/MainEntryText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="48dp">

            <ImageView
                android:id="@+id/iv_go2gallery"
                android:layout_width="@dimen/size_search_fragment_button"
                android:layout_height="@dimen/size_search_fragment_button"
                android:background="@drawable/selector_bg_gallery_button"
                android:src="@android:drawable/ic_menu_camera"
                android:scaleType="centerInside"/>

            <TextView
                android:id="@+id/tv_go2gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="选图搜索"
                android:textAppearance="@style/MainEntryText" />
        </LinearLayout>


        <!--android:background="?attr/selectableItemBackground"-->

    </LinearLayout>

</FrameLayout>
