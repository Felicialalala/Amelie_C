<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.diandian.coolco.emilie.activity.MainActivity">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="拍照搜索"
        android:textAppearance="@style/MainEntryText"
        android:id="@+id/tv_go2camera"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center"
        android:drawableTop="@android:drawable/ic_menu_camera"
        android:background="?attr/selectableItemBackground"
        android:paddingTop="@dimen/main_entry_padding"
        android:paddingBottom="@dimen/main_entry_padding" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="选图搜索"
        android:textAppearance="@style/MainEntryText"
        android:id="@+id/tv_go2gallery"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center"
        android:drawableTop="@android:drawable/ic_menu_gallery"
        android:background="?attr/actionBarItemBackground"
        android:paddingTop="@dimen/main_entry_padding"
        android:paddingBottom="@dimen/main_entry_padding" />
</LinearLayout>
